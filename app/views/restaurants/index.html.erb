<div class="container p-3 mb-2 bg-light text-dark" style="height: 100%">
<h1>All Restaurants</h1>

<ul style="list-style-type: none;">
  <% @restaurants.each do |restaurant| %>
    <li class="btn btn-outline-primary"><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
  <% end %>
</ul>

<%= link_to "Add new restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>
