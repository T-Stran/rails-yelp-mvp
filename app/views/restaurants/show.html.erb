<div class="container">
<h1><%= @restaurant.name %></h1>

<p>Address: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

<%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Index", restaurants_path, class: "btn btn-primary" %>

<h3>Reviews</h3>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> Rating: <%= review.rating%></li>
  <% end %>
</ul>
<br>
</div>
